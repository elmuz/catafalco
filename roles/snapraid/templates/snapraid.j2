# SnapRAID Configuration
{{ ansible_managed | comment }}
# DO NOT EDIT MANUALLY

# Parity Disks
parity {{ mounts_root_location }}/parity{{ snapraid_parity_disks[0].parity_disk_id }}/snapraid.parity

{% for i in range(2, 7) %}
{% if i <= snapraid_parity_disks|length %}
{{ i }}-parity {{ parity_mount_path }}/parity{{ snapraid_parity_disks[i].parity_disk_id }}/snapraid.{{ snapraid_parity_disks[i].parity_disk_id }}-parity
{% endif %}
{% endfor %}

# Content Files
{% for content_file in snapraid_content_files %}
content {{ content_file }}
{% endfor %}

# Data Disks (btrfs data subvol)
{% for i in range(snapraid_data_disks|length) %}
data d{{ snapraid_data_disks[i].data_disk_id }} {{ mounts_root_location }}/data{{ snapraid_data_disks[i].data_disk_id }}/
{% endfor %}

# Excludes hidden files and directories
nohidden

# Defines files and directories to exclude
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude *.!sync
exclude /.snapshots/

# Automatically save the state when syncing after the specified amount of GB processed
autosave 500
