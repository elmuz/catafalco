#
# WARNING: Make sure to use the docker-compose.yml of the current release:
#
# https://github.com/immich-app/immich/releases/latest/download/docker-compose.yml
#
# The compose file on main may not be compatible with the latest release.
#

name: "{{ immich_container_name }}"

networks:
  immich_network:
    name: "{{ immich_network_name }}"
    external: true

services:
  immich-server:
    container_name: "{{ immich_container_name }}-server"
    image: ghcr.io/immich-app/immich-server:${IMMICH_VERSION:-release}
    user: "{{ guid }}:{{ guid }}"
    networks:
      "{{ immich_network_name }}":
        aliases:
          - immich_server
    volumes:
      - /etc/localtime:/etc/localtime:ro
      - ${UPLOAD_LOCATION}:/usr/src/app/upload
      - ${EXTERNAL_PATH}:/usr/src/app/external:ro
    env_file:
      - .env
    depends_on:
      - redis
      - database
    restart: unless-stopped
    healthcheck:
      disable: false
      interval: 5m
    labels:
      swag.uptime-kuma.enabled: "true"
      swag.uptime-kuma.monitor.name: "{{ immich_dashboard_name }}"
      swag.uptime-kuma.monitor.url: "{{ immich_dashboard_url }}"

  immich-machine-learning:
    container_name: "{{ immich_container_name }}-machine-learning"
    # For hardware acceleration, add one of -[armnn, cuda, openvino] to the image tag.
    # Example tag: ${IMMICH_VERSION:-release}-cuda
    image: ghcr.io/immich-app/immich-machine-learning:${IMMICH_VERSION:-release}-openvino
    user: "{{ guid }}:{{ guid }}"
    extends:  # uncomment this section for hardware acceleration - see https://immich.app/docs/features/ml-hardware-acceleration
      file: hwaccel.ml.yml
      service: openvino  # set to one of [armnn, cuda, openvino, openvino-wsl] for accelerated inference - use the `-wsl` version for WSL2 where applicable
    networks:
      "{{ immich_network_name }}":
        aliases:
          - immich_machine_learning
    volumes:
      - model-cache:/cache
    env_file:
      - .env
    restart: unless-stopped
    healthcheck:
      disable: false
      interval: 5m

  redis:
    container_name: "{{ immich_container_name }}-redis"
    image: docker.io/valkey/valkey:8-bookworm@sha256:ff21bc0f8194dc9c105b769aeabf9585fea6a8ed649c0781caeac5cb3c247884
    networks:
      "{{ immich_network_name }}":
        aliases:
          - immich_redis
    healthcheck:
      test: redis-cli ping || exit 1
      interval: 5m
    restart: unless-stopped

  database:
    container_name: "{{ immich_container_name }}-postgres"
    image: ghcr.io/immich-app/postgres:14-vectorchord0.4.3-pgvectors0.2.0@sha256:5f6a838e4e44c8e0e019d0ebfe3ee8952b69afc2809b2c25f7b0119641978e91
    networks:
      "{{ immich_network_name }}":
        aliases:
          - immich_postgres
    environment:
      POSTGRES_PASSWORD: ${DB_PASSWORD}
      POSTGRES_USER: ${DB_USERNAME}
      POSTGRES_DB: ${DB_DATABASE_NAME}
      POSTGRES_INITDB_ARGS: '--data-checksums'
      # Uncomment the DB_STORAGE_TYPE: 'HDD' var if your database isn't stored on SSDs
      # DB_STORAGE_TYPE: 'HDD'
    volumes:
      - ${DB_DATA_LOCATION}:/var/lib/postgresql/data
      - {{ docker_dir }}/{{ immich_container_name }}/backup:/backups
    restart: unless-stopped

volumes:
  model-cache:
    driver: local
    driver_opts:
      o: bind
      type: none
      device: "{{ cache_root }}/docker-volumes-cache/immich/models"
