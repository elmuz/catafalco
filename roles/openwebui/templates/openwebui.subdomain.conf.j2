server {
    {% include "roles/swag/templates/nginx/common.j2" %}

    server_name {{ openwebui_subdomain }}.*;

    location / {
        include /config/nginx/proxy.conf;
        include /config/nginx/resolver.conf;
        # CORS settings: OpenWebUI automatically adds "Access-Control-Allow-Origin: *" header to responses
        # add_header Access-Control-Allow-Origin 'https://{{ site_url }}';

        set $upstream_app {{ openwebui_container_name }};
        set $upstream_port 8080;
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;
    }
}
